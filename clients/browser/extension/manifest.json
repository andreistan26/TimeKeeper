{
    "manifest_version": 3,
    "name": "WindowTracker Extension",
    "version": "1.0",
    "permissions": ["activeTab", "storage"],
    "action": {
      "default_popup": "popup.html"
    },
    "content_security_policy": {
      "extension_pages": "script-src 'self'; object-src 'self'"
    },
    "background": {
      "scripts": ["content.js"]
    }
  }
  